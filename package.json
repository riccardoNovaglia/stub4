{
  "name": "stub4-project",
  "version": "0.0.0",
  "description": "Stub4 Project",
  "scripts": {
    "test": "cd server && npm run test:ci",
    "start-client": "cd client && npm run start",
    "start-server": "cd server && npm run start",
    "install:all": "npm install && npm run install:client && npm run install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "audit-fix:all": "npm audit --fix && npm run audit-fix:client && npm run audit-fix:server",
    "audit-fix:client": "cd client && npm audit --fix",
    "audit-fix:server": "cd server && npm audit --fix",
    "build": "./.scripts/build.sh"
  },
  "author": "Riccardo <stub4js+npm@gmail.com>",
  "dependencies": {},
  "devDependencies": {
    "husky": "^3.0.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
